<% content_for :title, "Artefacts" %>

<%= render "shared/page_header", title: "Artefacts" %>

<main class="page-body">
    <div class="container">

        <% @teams.each do |t| %>
            <h2><%= t.name %></h2>
            <ul>
                <% t.artefacts.each do |a| %>
                    <li>
                        <a href="<%= a.link %>" target="blank">
                            <h3><%= a.name %></h3>
                        </a>
                        <p><%= a.description %></p>
                    </li>
                <% end %>
            </ul>
        <% end %>

    </div>
</main>